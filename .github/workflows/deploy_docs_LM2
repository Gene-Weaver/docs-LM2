name: Deploy Documentation to GitHub Pages

on:
  push:
    branches:
      - main  # Trigger the workflow on push events to the main branch

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2  # Checks-out your repository under $GITHUB_WORKSPACE

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'

    - name: Install dependencies
      run: |
        pip install -r requirements.txt  # Install all dependencies from the requirements file

    - name: Build Documentation
      run: |
        sphinx-build -b html source/ build/  # Build HTML docs from source

    - name: Deploy
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}  # Provided by GitHub for authentication
        publish_dir: ./build  # Directory where Sphinx outputs the HTML files
